[Unit]
Description=Node Exporter
ConditionPathExists={{ base_path }}/bin/node_exporter
Wants=network-online.target
After=network-online.target

[Service]
Type=simple
User={{ user }}
Group={{ group }}
LimitNOFILE=1024

Restart=on-failure
RestartSec=10

ExecStart={{ base_path }}/bin/node_exporter

[Install]
WantedBy=multi-user.target
